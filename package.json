class CLI {
    run() {
      return inquirer
        .prompt([
          {
            name: "text",
            type: "input",
            message:
              "Submit text for this logo. (No longer than 3 characters.)",
            validate: (text) =>
              text.length <= 3 ||
              "Message should be no longer than 3 characters",
          },
          {
            name: "textColor",
            type: "input",
            message: "Enter a text color",
          },
          {
            name: "shapeType",
            type: "list",
            message: "Select a shape for the logo",
            choices: ["circle", "square", "triangle"],
          },
          {
            name: "shapeColor",
            type: "input",
            message: "Enter a shape color",
          },
        ])